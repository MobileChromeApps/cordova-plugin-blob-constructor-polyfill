<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    id="cordova-plugin-blob-constructor-polyfill"
    version="1.0.2">
  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <name>Blob constructor shim</name>
  <keywords>chrome,blob,polyfill</keywords>
  <repo>https://github.com/MobileChromeApps/mobile-chrome-apps.git</repo>
  <issue>https://github.com/MobileChromeApps/mobile-chrome-apps/issues</issue>

  <platform name="android">
    <js-module src="Blob.js" name="blob-constructor">
      <merges target="window" />
    </js-module>
  </platform>
</plugin>
